- content_for :title do
  people

- content_for :sidemenu do
  = render 'people_page/sidebar'

= content_for :main do
  %table.table.table-bordered.table-striped{:style => 'clear: both'}
    %tr
      %th{:width => '13px'}
      %th{:width => '290px'} Name
      %th{:width => '280px'} Email
      %th
      %th
    -@teachers.each do |teacher|
      %tr
        %td
          %a
            %i.icon-remove
        %td
          %a.x-editable-teacher-name{:href => "#", 'data-type' => 'user_name'}
            = teacher.name
        %td
          %a.x-editable-email{:href => '#'}
            = teacher.email
        %td
          %button.btn.btn-primary{'type' => 'button'}
            Show Detail
        %td
          %button.btn.btn-primary{'type' => 'button'}
            Reset Password
  %button.btn.btn-primary{'type' => 'button'}
    New Teacher

