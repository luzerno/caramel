= content_for :title do
  people

= content_for :sidemenu do
  = render 'people_page/sidebar'

= content_for :main do
  %table.table.table-bordered.table-striped{:style => 'clear: both'}
    %tr
      %th{:width => '14%'}
        Name
      %th{:width => '14%'}
        Email
      %th{:width => '25%'}
        Region
    -@staffs.each do |staff|
      %tr
        %td
          %a.x-editable-staff-name{:href => "#", 'data-type' => 'user_name'}
            = staff.name
        %td
          %a.x-editable-email{:href => '#'}
            = staff.email
        %td
          %a.region-input{:href => '#'}
  %button.btn.btn-primary{'type' => 'button'}
    New Staff
