- content_for :title do
  people/students

- content_for :sidemenu do
  - render '/layouts/people_page_sidebar'
  
- content_for :main do
  %table.table.table-bordered.table-striped{:style => 'clear: both'}
    %tr
      %th{:width => '13px'}
      %th{:width => '290px'} Name
      %th{:width => '280px'} Email
      %th Region
      %th
    - @students.each do |student|
      %tr
        %td
          %a
            %i.icon-remove
        %td
          %a.x-editable-student-name{:href => "#"}
            = student.name
        %td
          %a.select2-region{:href => '#'}
        %td
          %button.btn.tn-primary{'type' => 'button'}
            Reset Password
          %button.btn.btn-primary{'type' => 'button', :herf => '#'}
            New Student
