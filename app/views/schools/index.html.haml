- content_for :title do
  programs/schools

- content_for :sidemenu do
  - render '/layouts/programs_page_sidebar'
  
- content_for :main do
  %table.table.table-bordered.table-striped.table-condensed{:style => 'clear: both'}
    %tr
      %th{:width => '13px'}
      %th{:width => '280px'} FULL NAME
      %th{:width => '280px'} ABBREVIATION
      %th REGION
    - @schools.each do |school|
      %tr
        %td
          %a
            %i.icon-remove
        %td
          %a.x-editable-input-text{:href => '#', 'data-url' => "/schools/#{school.id}", 'data-pk' => "#{school.id}", 'data-name' => 'full'}
            = school.full
        %td
          %a.x-editable-input-text{:href => '#', 'data-url' => "/schools/#{school.id}", 'data-pk' => "#{school.id}", 'data-name' => 'email', 'data-placeholder' => 'input email', 'data-name' => 'abbrev'}
            = school.abbrev
        %td
          = singular_selection(Region.all_ordered_json, school.region_id, school.id, "/schools/#{school.id}", 'region')
  %a.btn.btn-primary.new-entry{:href => "/schools/new", "data-entry" => "school"} New School
  = modal_for "new-entry", :modal_title => "New School", :css_class => "new-entry"
