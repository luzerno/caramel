- content_for :title do
  people/teachers

- content_for :sidemenu do
  - render '/layouts/people_page_sidebar'
  
- content_for :main do
  %table.table.table-bordered.table-striped{:style => 'clear: both'}
    %tr
      %th{:width => '13px'}
      %th{:width => '310'} Name
      %th{:width => '280px'} Email
      %th Region
      %th
    - @teachers.each do |teacher|
      %tr
        %td
          %a
            %i.icon-remove
        %td
          %a.x-editable-input-user-name{:href => "#", 'data-url' => "/teachers/#{teacher.id}", 'data-pk' => "#{teacher.id}"}
            = teacher.name
        %td
          %a.x-editable-input-text{:href => '#', 'data-url' => "/teachers/#{teacher.id}", 'data-pk' => "#{teacher.id}", 'data-name' => 'email', 'data-placeholder' => 'input email'}
            = teacher.email
        %td
          -# %a#tags{:href=>"#", 'data-type'=>"select2", 'data-pk'=>"1",  'data-original-titlei'=>"Enter tags"}
            html, javascript
          %a.x-editable-select2-multiple{:href => '#', 'data-value' => "/teachers/#{teacher.id}/regions.json", 'data-url' => "/teachers/#{teacher.id}", 'data-pk' => "#{teacher.id}", 'data-name' => 'regions'}
            = teacher.regions[0].name
        %td
          %button.btn{'type' => 'button'}
            Reset Password

  %a.btn.btn-primary.new-people{:href => "/teachers/new", "data-people" => "teacher"} New Teacher
  = modal_for "new-people", :modal_title => "New People", :css_class => "new-people"
