- content_for :title do
  people/teachers

- content_for :sidemenu do
  - render '/layouts/people_page_sidebar'
  
- content_for :main do
  %table.table.table-bordered.table-striped{:style => 'clear: both'}
    %tr
      %th{:width => '13px'}
      %th{:width => '310'} Name
      %th{:width => '280px'} Email
      %th Region
      %th
    - @teachers.each do |teacher|
      %tr
        %td
          %a
            %i.icon-remove
        %td
          %a.x-editable-input-user-name{:href => "#", 'data-url' => "/teachers/#{teacher.id}", 'data-pk' => "#{teacher.id}"}
            = teacher.name
        %td
          %a.x-editable-input-email{:href => '#', 'data-url' => "/teachers/#{teacher.id}", 'data-pk' => "#{teacher.id}"}
            = teacher.email
        %td
          %a.x-editable-select2-multiple{:href => '#'}
        %td
          %button.btn.btn-primary{'type' => 'button'}
            Reset Password
