= content_for :title do
	people

= content_for :sidemenu do
	= render 'people/sidebar'

= content_for :main do
	%table.table.table-bordered.table-striped{:style => 'clear: both'}
		%tr
			%th{:width => '25%'}
				First Name
			%th{:width => '25%'}
				Last Name
			%th{:width => '25%'}
				Email
			%th{:width => '25%'}
				Region
		-@staffs.each do |staff|
			%tr
				%td
					%a.fname-input{:href => '#'}
					= staff.first_name
				%td
					%a.lname-input{:href => '#'}
					= staff.last_name
				%td
					= staff.email
				%td
