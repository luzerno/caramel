%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "App_Name"
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse
      .navbar-inner
        .brand Musikids Class Attendance
        %ul.nav
          = active_link_partialpath 'PEOPLE', '/staffs'
          = active_link_partialpath 'PROGRAMS', '/regions'
          = active_link_partialpath 'CLASSES', '#'
          = active_link_partialpath 'INSTRUMENTS','#'
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => ''}
              SEMESTER
              %span.caret
            %ul.dropdown-menu
              %li
                %a{:href => ''} Semester One
              %li
                %a{:href => ''} Semester Two
        %ul.nav.pull-right
          %a.brand#nav-right
            %i.icon-user.icon-white
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => ''}
              = current_user.name
              %span.caret
            %ul.dropdown-menu
              %li
                %a{:href => '/profiles'} Profile
              %li
                %a{:href => '#'} B
              %li
                %a{:href => '/session_page/signout'} Sign out
          -# %ul.nav
          -#   %li
          -#     %a{:href => '/session_page/signout'} Sign out
    .container-fluid
      .row-fluid
        .span2.content
          = yield(:sidemenu)
        .span10.content
          = yield(:main)
