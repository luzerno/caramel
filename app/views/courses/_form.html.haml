#course-form-body
  = simple_form_for @course do |f|
    = f.input :program_id, :input_html => {:value => params[:program_id]}, :as => :hidden
    - if params[:course_type] == "regular"
      - course_type = "RegularCourse"
    - else
      - course_type = "GroupCourse"
    = f.input :course_type, :input_html => {:value => course_type, :readonly => true}
    = f.input :name
    -# = f.collection_radio_buttons :course_type, [["RegularCourse", "regular course"], ["GroupCourse", "group course"]], :first, :last, :input_html => {:value => "RegularCourse"} #TODO default value??
    -# = f.button :submit

