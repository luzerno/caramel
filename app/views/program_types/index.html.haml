- content_for :title do
  programs/program types

- content_for :sidemenu do
  - render '/layouts/programs_page_sidebar'

- content_for :action_button do
  %a.btn.btn-primary.delete-entry{'data-url' => "/program_types/destroy_multi"}
    %i.icon-trash.icon-white
  %a.btn.btn-primary.new-entry{:href => "/program_types/new", "data-entry" => "program-types"}
    %i.icon-plus.icon-white
  = modal_for "new-entry", :modal_title => "New Program Type", :css_class => "new-entry"

- content_for :main do
  %table.table.table-bordered.table-striped.table-condensed{:style => 'clear: both'}
    %tr
      %th{:width => '10px'}
      %th PROGRAM NAME
      - @program_types.each do |program_type|
        %tr
          %td
            %input.checkbox-select-to-delete{:type => 'checkbox', :value => "#{program_type.id}"}
          %td
            %a.x-editable-input-text{:href => '#', 'data-url' => "/program_types/#{program_type.id}", 'data-pk' => "#{program_type.id}", 'data-name' => 'name', 'data-placeholder' => 'input full name'}
              = program_type.name
