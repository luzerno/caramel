class Region < ActiveRecord::Base
  has_many :schools
  has_many :domains
  has_many :users, through: :domains

  def self.all_ordered
    @regions = Region.order("name").all
    puts 'dddddddddd'
    @regions.map do |region| 
      puts region.name
      {:id => region.id, :text => region.name}
    end
  end
end
